{
  "name": "@nova/nova-deploy",
  "version": "0.5.0",
  "private": true,
  "homepage": "https://github.com/nova-eco",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nova-eco/nova-deploy.git"
  },
  "keywords": [
    "nova",
    "deployment"
  ],
  "license": "MIT",
  "author": "admin <admin@mova.eco>",
  "packageManager": "npm@10",
  "engines": {
    "node": ">=21",
    "npm": ">=10"
  },
  "scripts": {
    "changelog": "auto-changelog",
    "changelog:commit": "git commit -m 'ci: update changelog' --no-verify",
    "check": "npm run format && npm run lint && npm run spell",
    "commit-msg": "commitlint --edit",
    "docker": "npm run docker:only",
    "docker:has": "bash -c 'command -v docker'",
    "docker:only": "npm run docker:start",
    "docker:start": "docker compose up --build --force-recreate",
    "docker:stop": "docker compose down --remove-orphans --rmi all",
    "format": "npm run format:check",
    "format:base": "npx prettier .",
    "format:check": "npm run format:base -- --check",
    "format:fix": "npm run format:base -- --write",
    "lint": "npm run lint:compose",
    "lint:compose": "npm run docker:has && docker compose config",
    "predocker": "npm run docker:has",
    "pre-push": "npm run check",
    "prepare": "husky",
    "spell": "npx cspell .",
    "start": "npm run check && npm run docker",
    "stop": "npm run docker:stop"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@commitlint/format": "^20.0.0",
    "@types/node": "^22.7.6",
    "@typescript-eslint/eslint-plugin": "^8.34.0",
    "@typescript-eslint/parser": "^8.34.0",
    "auto-changelog": "^2.5.0",
    "commitlint": "^20.1.0",
    "cspell": "^8.18.1",
    "husky": "^9.1.7",
    "prettier": "^3.3.3",
    "prettier-plugin-sh": "^0.17.4",
    "prettier-plugin-sort-json": "^4.1.1"
  }
}
