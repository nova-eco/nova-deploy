{
  "arrowParens": "always",
  "bracketSpacing": true,
  "endOfLine": "lf",
  "importOrder": [
    "dotenv/config",
    "<BUILTIN_MODULES>",
    "<THIRD_PARTY_MODULES>",
    "^@nova/(.*)$",
    "^@app/core/(.*)$",
    "^@app/interfaces/(.*)$",
    "^[./]"
  ],
  "insertPragma": false,
  "jsxSingleQuote": false,
  "overrides": [
    {
      "files": ["./Dockerfile", "compose.yaml", "test/**/*.test.ts"],
      "options": {
        "importOrder": []
      }
    }
  ],
  "plugins": [
    "@ianvs/prettier-plugin-sort-imports",
    "prettier-plugin-sh",
    "prettier-plugin-sort-json"
  ],
  "printWidth": 90,
  "proseWrap": "always",
  "quoteProps": "as-needed",
  "requirePragma": false,
  "semi": true,
  "singleQuote": true,
  "tabWidth": 2,
  "trailingComma": "all",
  "useTabs": false
}
